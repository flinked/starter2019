{% block html_head_container %}

{% include 'views/global/head.twig' %}
	{% block head %}{% endblock %}
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{# Menu section #}
		<header class="header">
			{% block header %}
				<div class="header__wrapper">
					<nav class="header__nav" role="navigation">
						{% include "views/layout/menu/menu.twig" with {'menu': menu.get_items} %}
					</nav>
				</div>
			{% endblock %}
		</header>
		<div id="barba-wrapper">
			<div class="barba-container">
				<main class="page--wrapper">

					{# Pages content section #}
					<div class="page--content">
						{% block content %}
							Sorry, no content
						{% endblock %}
					</div>

					{% block footer %}
						<footer class="footer">
							<div class="footer__wrapper">
								{% include 'views/layout/footer/footer.twig' %}
							</div>
						</footer>
						{{ function('wp_footer') }}
					{% endblock %}
				</main>
			</div>
		</div>
	</body>
</html>
